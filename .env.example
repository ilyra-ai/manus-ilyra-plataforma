# iLyra Platform Environment Variables

# ======================
# GENERAL CONFIGURATION
# ======================
NODE_ENV=development
FLASK_ENV=development
FLASK_DEBUG=1

# ======================
# DATABASE CONFIGURATION
# ======================
DATABASE_URL=postgresql://ilyra:ilyra123@postgres:5432/ilyra_dev
POSTGRES_DB=ilyra_dev
POSTGRES_USER=ilyra
POSTGRES_PASSWORD=ilyra123

# ======================
# REDIS CONFIGURATION
# ======================
REDIS_URL=redis://redis:6379/0
REDIS_PASSWORD=your_redis_password_here

# ======================
# SECURITY
# ======================
SECRET_KEY=your_super_secret_key_here_change_in_production
JWT_SECRET_KEY=your_jwt_secret_key_here_change_in_production

# ======================
# AI INTEGRATION
# ======================
HUGGINGFACE_API_KEY=your_huggingface_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# ======================
# FRONTEND CONFIGURATION
# ======================
REACT_APP_API_URL=http://localhost:5000
REACT_APP_HUGGINGFACE_API_KEY=your_huggingface_api_key_here
REACT_APP_ENVIRONMENT=development

# ======================
# EMAIL CONFIGURATION
# ======================
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_password_here
MAIL_DEFAULT_SENDER=noreply@ilyra.ai

# ======================
# PAYMENT GATEWAYS
# ======================
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_MODE=sandbox

MERCADOPAGO_ACCESS_TOKEN=your_mercadopago_access_token
MERCADOPAGO_PUBLIC_KEY=your_mercadopago_public_key

# ======================
# MONITORING
# ======================
GRAFANA_PASSWORD=your_grafana_admin_password
PROMETHEUS_RETENTION=15d

# ======================
# BACKUP CONFIGURATION
# ======================
BACKUP_WEBHOOK_URL=https://hooks.slack.com/your/webhook/url
BACKUP_RETENTION_DAYS=30

# ======================
# SSL/TLS CONFIGURATION
# ======================
SSL_CERT_EMAIL=admin@ilyra.ai
DOMAIN_NAME=ilyra.ai

# ======================
# LOGGING
# ======================
LOG_LEVEL=INFO
LOG_FILE=/app/logs/ilyra.log

# ======================
# RATE LIMITING
# ======================
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# ======================
# FILE UPLOAD
# ======================
MAX_CONTENT_LENGTH=16777216
UPLOAD_FOLDER=/app/uploads

# ======================
# ANALYTICS
# ======================
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
MIXPANEL_TOKEN=your_mixpanel_token

# ======================
# SOCIAL AUTH (Optional)
# ======================
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret

# ======================
# PUSH NOTIFICATIONS
# ======================
VAPID_PUBLIC_KEY=your_vapid_public_key
VAPID_PRIVATE_KEY=your_vapid_private_key
VAPID_SUBJECT=mailto:admin@ilyra.ai

# ======================
# DEVELOPMENT TOOLS
# ======================
ENABLE_PROFILER=false
ENABLE_DEBUG_TOOLBAR=false
