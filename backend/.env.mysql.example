# iLyra Platform - Configurações de Ambiente (MySQL Production)

# Configurações Gerais
FLASK_APP=app.py
FLASK_ENV=production
SECRET_KEY=your-super-secret-key-change-this-in-production
DEBUG=False

# Configurações do Banco de Dados MySQL
DATABASE_TYPE=mysql
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=ilyra_user
MYSQL_PASSWORD=your-mysql-password
MYSQL_DATABASE=ilyra_db
MYSQL_CHARSET=utf8mb4

# URL de Conexão (gerada automaticamente)
# DATABASE_URL=mysql+pymysql://user:password@host:port/database

# Configurações JWT
JWT_SECRET_KEY=your-jwt-secret-key-change-this
JWT_ACCESS_TOKEN_EXPIRES=3600
JWT_REFRESH_TOKEN_EXPIRES=2592000

# Configurações de Email (SMTP)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@ilyra.com

# URL Base da Aplicação
BASE_URL=https://ilyra.com
FRONTEND_URL=https://app.ilyra.com

# Configurações de IA
GOOGLE_API_KEY=your-google-gemini-api-key
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key

# Configurações de Pagamento
STRIPE_SECRET_KEY=sk_live_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_live_your-stripe-publishable-key
MERCADOPAGO_ACCESS_TOKEN=your-mercadopago-access-token

# Configurações de Cache (Redis)
REDIS_URL=redis://localhost:6379/0
CACHE_TYPE=redis

# Configurações de Rate Limiting
RATELIMIT_STORAGE_URL=redis://localhost:6379/1

# Configurações de Logging
LOG_LEVEL=INFO
LOG_FILE=/var/log/ilyra/app.log

# Configurações de Backup
BACKUP_ENABLED=True
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=ilyra-backups
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# Configurações de Monitoramento
SENTRY_DSN=your-sentry-dsn
MONITORING_ENABLED=True

# Configurações de Segurança
CORS_ORIGINS=https://app.ilyra.com,https://ilyra.com
ALLOWED_HOSTS=ilyra.com,app.ilyra.com,api.ilyra.com
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True

# Configurações de Performance
SQLALCHEMY_POOL_SIZE=20
SQLALCHEMY_MAX_OVERFLOW=30
SQLALCHEMY_POOL_TIMEOUT=30
SQLALCHEMY_POOL_RECYCLE=3600

# Configurações de Upload
MAX_CONTENT_LENGTH=16777216
UPLOAD_FOLDER=/var/uploads/ilyra
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,pdf,doc,docx

# Configurações de Celery (Tarefas Assíncronas)
CELERY_BROKER_URL=redis://localhost:6379/2
CELERY_RESULT_BACKEND=redis://localhost:6379/3

# Configurações de Analytics
GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
HOTJAR_ID=your-hotjar-id

# Configurações de CDN
CDN_DOMAIN=cdn.ilyra.com
STATIC_URL_PATH=/static
STATIC_FOLDER=static

# Configurações de Timezone
TIMEZONE=America/Sao_Paulo
USE_TZ=True
