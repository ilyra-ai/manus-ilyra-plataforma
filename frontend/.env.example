# Configurações da API Backend
REACT_APP_API_URL=http://localhost:5000/api
REACT_APP_WS_URL=ws://localhost:5000

# Configurações de Ambiente
REACT_APP_ENV=development
REACT_APP_VERSION=1.0.0

# Configurações de Autenticação
REACT_APP_JWT_SECRET=your-jwt-secret-key
REACT_APP_REFRESH_TOKEN_EXPIRY=7d

# Configurações de IA
REACT_APP_AI_ENABLED=true
REACT_APP_AI_MODELS=gemini-pro,gpt-4,claude-3-sonnet

# Configurações de Pagamento
REACT_APP_STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
REACT_APP_MERCADOPAGO_PUBLIC_KEY=your_mercadopago_public_key

# Configurações de Analytics
REACT_APP_GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
REACT_APP_HOTJAR_ID=your_hotjar_id

# Configurações de Notificações
REACT_APP_PUSH_NOTIFICATIONS_ENABLED=true
REACT_APP_VAPID_PUBLIC_KEY=your_vapid_public_key

# Configurações de Upload
REACT_APP_MAX_FILE_SIZE=10485760
REACT_APP_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Configurações de Cache
REACT_APP_CACHE_ENABLED=true
REACT_APP_CACHE_DURATION=300000

# Configurações de Debug
REACT_APP_DEBUG_MODE=false
REACT_APP_LOG_LEVEL=info

# Configurações de Tema
REACT_APP_DEFAULT_THEME=light
REACT_APP_THEME_PERSISTENCE=true

# Configurações de Localização
REACT_APP_DEFAULT_LANGUAGE=pt-BR
REACT_APP_SUPPORTED_LANGUAGES=pt-BR,en-US,es-ES

# Configurações de Performance
REACT_APP_LAZY_LOADING=true
REACT_APP_IMAGE_OPTIMIZATION=true
REACT_APP_BUNDLE_ANALYZER=false

# Configurações de Segurança
REACT_APP_CSP_ENABLED=true
REACT_APP_HTTPS_ONLY=false
REACT_APP_SECURE_COOKIES=false

# Configurações de Monitoramento
REACT_APP_ERROR_REPORTING=true
REACT_APP_PERFORMANCE_MONITORING=true
REACT_APP_USER_TRACKING=true

# URLs de Serviços Externos
REACT_APP_CDN_URL=https://cdn.ilyra.com
REACT_APP_ASSETS_URL=https://assets.ilyra.com
REACT_APP_DOCS_URL=https://docs.ilyra.com

# Configurações de Rate Limiting
REACT_APP_API_RATE_LIMIT=100
REACT_APP_API_RATE_WINDOW=60000

# Configurações de WebSocket
REACT_APP_WS_RECONNECT_ATTEMPTS=5
REACT_APP_WS_RECONNECT_INTERVAL=3000

# Configurações de PWA
REACT_APP_PWA_ENABLED=true
REACT_APP_OFFLINE_SUPPORT=true

# Configurações de SEO
REACT_APP_SITE_NAME=iLyra
REACT_APP_SITE_DESCRIPTION=Sua Jornada Espiritual Inteligente
REACT_APP_SITE_URL=https://ilyra.com
REACT_APP_SITE_IMAGE=https://ilyra.com/og-image.jpg

# Configurações de Social Login
REACT_APP_GOOGLE_CLIENT_ID=your_google_client_id
REACT_APP_FACEBOOK_APP_ID=your_facebook_app_id
REACT_APP_GITHUB_CLIENT_ID=your_github_client_id

# Configurações de Backup
REACT_APP_AUTO_BACKUP=true
REACT_APP_BACKUP_INTERVAL=86400000

# Configurações de Gamificação
REACT_APP_GAMIFICATION_ENABLED=true
REACT_APP_ACHIEVEMENTS_ENABLED=true
REACT_APP_LEADERBOARD_ENABLED=true

# Configurações de Métricas
REACT_APP_METRICS_AUTO_SYNC=true
REACT_APP_METRICS_SYNC_INTERVAL=300000
REACT_APP_METRICS_OFFLINE_STORAGE=true

# Configurações de Chat IA
REACT_APP_AI_CHAT_ENABLED=true
REACT_APP_AI_CHAT_HISTORY_LIMIT=100
REACT_APP_AI_RESPONSE_TIMEOUT=30000

# Configurações de Exportação
REACT_APP_EXPORT_FORMATS=pdf,csv,json
REACT_APP_EXPORT_COMPRESSION=true

# Configurações de Personalização
REACT_APP_CUSTOM_THEMES=true
REACT_APP_CUSTOM_LAYOUTS=true
REACT_APP_CUSTOM_WIDGETS=true
